h3 #{__i('users')}
	img(src='/images/pov/icon_core_role_60x45.png').floatLeft
hr
include ../includes/paginationTop
if session.user_id == 'superadmin'
	include ../includes/listCrudbox
each element,i in elements
	div.floatLeft.size2
		a(href='/#{elementName}s/#{element._id}').elemGrid.outerCont
			h5 #{element.name} 
			div.innerCont
				span.textMini email: 
					h6 #{emailObfuscate(element.email)}
			include ../includes/listInfoBox
			//- non ancora implementato
				if ( mode == 'select' )
					a(title='#{__i('select')} #{__i(elementName)}', onclick='').adminButton.selectButton
	if (i+1)%6==0
		div.clear
include ../includes/paginationBottom
	
